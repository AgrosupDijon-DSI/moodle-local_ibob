<div class="ibob-modal">
    <div class="image-wrapper"><img src="https://{{ image }}" alt="badge - {{ name }}" class="img-responsive"></div>
    <div class="ibob-modal-detail">
        <div class="ibob-modal-detail-assertion">
            <h1 class="badgename"> {{ name }}</h1>
<!--            <p><label>{{# str }} mustachelibexpirationdate, local_ibob {{/ str }} </label> {{ expirationformateddate }}</p>-->
        </div>
        <div class="ibob-modal-detail-issuer">
            <p><label>{{# str }} mustachelibemitter, local_ibob {{/ str }} </label> <a class="ibob-modal-detail-issuer-url" href="{{ issuerurl }}" target="_blank">{{ issuername }}</a> - <a href="mailto:{{ issuercontact }}">{{ issuercontact }}</a></p>
        </div>
        <div class="ibob-modal-detail-description">
            <p>{{ description }}</p>
        </div>
    </div>
</div>
